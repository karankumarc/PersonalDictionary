<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:id="@+id/text_view_row_meaning"
            android:text="Meaningdnod jdsajkjsidj jsdnjk dj djd cd jdjnjsd  dsjndjs djjsdnf"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/score_text"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/text_view_row_meaning"
            android:text="Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_button_view_details"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/text_view_row_meaning"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="@drawable/background"
            android:text="View Details"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:id="@+id/text_view_row_child_score"
            android:src="@android:drawable/arrow_down_float"
            android:layout_below="@id/text_view_row_meaning"
            android:layout_toRightOf="@id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</android.support.v7.widget.CardView>